@import 'nib'
@import '_globals'

.todo-item
  margin-left: 1.5em
  margin-bottom: 0.25em
  padding: 1em
  border: 1px solid rgba($defaultColor, 0.5)
  
  &.active
    background-color: rgba($defaultColor, 0.05)
    border: 1px solid $defaultColor
    
  .content
    position: relative
    display: flex
    align-items: center
    width: 100%
    font-size: 1.5em
    $opacityWithTransition(0.5, 100ms)
    background-color: yellow
  
  &.active
    .content
      opacity: 1
  
  /** Positioning
    */
  .positioning
    order: 1
    width: 50px
    background-color: red
  
  /** Tasks
   */

  .task
    order: 2
    flex-grow: 1
    position: relative
    background-color: orange
    
    .text
      padding: 0 0.5em
      display: block
      position: absolute
    
    .input
      padding: 0 0.5em
      margin: 0
      width: 100%
      height: 100%
      font-size: 1em
      border: $defaultColor
      background-color: transparent
  
  /** Buttons
    */

  .buttons
    order: 3
    display: block
    align-self: center
    $opacityWithTransition(0, 150ms)
    pointer-events: none
    background-color: aqua
    cursor: pointer
      
    .completed-btn,
    .delete-btn
      padding: 0.25em
      margin-left: 0.25em
      font-family: sans-serif
      border: 1px solid $defaultColor
      $opacityWithTransition(0.5, 150ms)
      
      &.active
        opacity: 1
        background-color: #fff
  
  &.active
    .buttons
      opacity: 1
      pointer-events: all