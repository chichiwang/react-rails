@import 'nib'
@import '_globals'

.todo-list
  
  h2
    margin-bottom: 0.5em
    font-size: 1.25em
    font-weight: bold
  
  .todo-item
    position: relative
    display: flex
    margin-left: 1.5em
    padding: 1em
    border: 1px solid rgba($defaultColor, 0.5)
    
    &.active
      background-color: rgba($defaultColor, 0.05)
      border: 1px solid $defaultColor
    
    .todo-text
      display: inline
    
    .todo-buttons
        display: inline-block
        position: absolute
        right: 1em
        align-self: center
        cursor: pointer

    .todo-done,
    .todo-delete
      margin: 0 0.25em
      padding: 0.25em
      font-family: sans-serif
      border: 1px solid $defaultColor