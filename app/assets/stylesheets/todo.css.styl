@import 'nib'
@import '_globals'

.todo-list
  
  h2
    margin-bottom: 0.5em
    font-size: 1.25em
    font-weight: bold
  
  .todo-item
    position: relative
    display: flex
    margin-left: 1.5em
    margin-bottom: 0.25em
    padding: 1em
    border: 1px solid rgba($defaultColor, 0.5)
    
    .todo-text
      display: block
      opacity: 0.5
      transition: opacity 150ms ease-in-out
    
    .todo-buttons
      display: inline-block
      position: absolute
      right: 1em
      align-self: center
      cursor: pointer
      opacity: 0
      pointer-events: none
      transition: opacity 150ms ease-in-out
        
    .todo-done,
    .todo-delete
      margin: 0 0.25em
      padding: 0.25em
      font-family: sans-serif
      border: 1px solid $defaultColor
      opacity: 0.5
      transition: opacity 150ms ease-in-out
      
      &.active
        opacity: 1
        background-color: #fff
    
    &.active
      background-color: rgba($defaultColor, 0.05)
      border: 1px solid $defaultColor
      
      .todo-text
        opacity: 1
      
      .todo-buttons
        opacity: 1
        pointer-events: all